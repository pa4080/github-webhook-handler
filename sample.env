# Server Configuration
PORT=3000
WEBHOOK_SECRET=your_webhook_secret_key_here
WEBHOOK_URL="http://localhost:3000/webhook"

# Repository Configuration
# For public repositories, you don't need credentials
# For private repositories, provide SSH key path
SSH_PRIVATE_KEY_PATH=/path/to/your/ssh/private/key
SSH_KEY_PASSPHRASE=optional_passphrase_if_your_key_has_one

# Define repositories and their deployment commands
# Format: REPO_[name]_URL=git_url
# Format: REPO_[name]_COMMAND=deployment_command
REPO_PROJECT1_URL=git@github.com:owner/project.git
REPO_PROJECT1_COMMAND=cd /path/to/project && pnpm docker:deploy
